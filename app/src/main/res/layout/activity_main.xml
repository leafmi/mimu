<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="musicdemo.jlang.com.musicdemo.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <android.support.design.widget.TabLayout
            android:id="@+id/local_music_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            app:tabIndicatorColor="@color/themeColor"
            app:tabSelectedTextColor="@color/themeColor"
            app:tabTextColor="#7D7D7D" />


        <android.support.v4.view.ViewPager
            android:id="@+id/local_music_viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff" />


        <include
            android:id="@+id/layout_player_content"
            layout="@layout/layout_main_player_content" />
    </LinearLayout>

</LinearLayout>
